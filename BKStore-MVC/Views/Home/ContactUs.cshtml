@model BKStore_MVC.ViewModel.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container my-5" id="formText">
    <h1 class="mb-4">Contact Us</h1>

    <div class="row">
        <!-- Left Column: Contact Information -->
        <div class="col-md-6">
            <p>
                We're here to help! You can reach out to us through any of the following methods:
            </p>
            <ul class="list-unstyled">
                <li><strong>Phone:</strong> +1 123-456-7890</li>
                <li><strong>Email:</strong> support@bookstore.com</li>
                <li><strong>Fax:</strong> +1 987-654-3210</li>
                <li><strong>Complaints:</strong> +1 111-222-3333</li>
            </ul>
            <p>
                Feel free to contact us during our business hours, and we will get back to you as soon as possible.
            </p>
        </div>

        <!-- Right Column: Contact Form -->
        <div class="col-md-6">
            <div class="contact-container">
                <h2>Get in touch</h2>
                <form asp-action="SubmitContact" method="post">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="form-label"></label>
                        <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-container {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        /* Set full width */
        width: 100%;
    }

        .contact-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, .5);
        }

    .btn {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>
